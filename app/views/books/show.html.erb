<div id="books-show">
  <h2><%= @book.title%></h2>
  <div class="books-show-left">
    <%= image_tag(@book.coverpath, size: '200x250')  %>
  </div>
  <div class="book-show-right">
    <h3>Book Info:</h3>
    <ul>
      <li><strong>Category: </strong><%= @book.category.name %></li>
      <li><strong>Author: </strong><%= @bookname %></li>
      <li><strong>Publisher: </strong><%= @book.publisher.name %></li>
      <li><strong>Price: </strong><%= @book.price %></li>
    </ul>
    <%= link_to 'Buy on eBay', @book.buy, class: "btn btn-success", target: '_blank' %>
  </div>
  <div class="clearfix"></div>
  <h4>Description:</h4>
  <p><%= @book.excerpt %></p>
</div>
